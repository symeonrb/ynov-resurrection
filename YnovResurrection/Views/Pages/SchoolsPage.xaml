<Page x:Class="YnovResurrection.Views.Pages.SchoolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:YnovResurrection.Views.Pages"
      mc:Ignorable="d"
      Title="SchoolsPage" Height="450" Width="800">

    <Grid>
        <!-- Titre de la page -->
        <TextBlock Text="Gestion des Écoles"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="10"/>

        <!-- Bouton Ajouter -->
        <Button Content="Ajouter"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"/>

        <!-- Liste des Bâtiments -->
        <DataGrid x:Name="listSchools"
                  AutoGenerateColumns="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="10,40,10,10"
                  IsReadOnly="True">
        </DataGrid>
    </Grid>

</Page>
